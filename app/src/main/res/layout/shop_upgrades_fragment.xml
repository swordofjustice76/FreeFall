                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:fontFamily="@font/pixel_font"
                            android:text="0/10"
                            android:textAlignment="center"
                            android:background="@drawable/shop_lvl_btn_style"
                            android:textColor="#ffffff"
                            android:textSize="30dp" />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/upgrade1_desc_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20sp"
                            android:layout_weight="75"
                            android:fontFamily="@font/pixel_font"
                            android:text="Makes your player smaller by 2.5%"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/upgrade1_stack_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="20sp"
                            android:layout_weight="25"
                            android:fontFamily="@font/pixel_font"
                            android:text="Stack: 0%"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                    </TableRow>


                </TableLayout>


            </RelativeLayout>

