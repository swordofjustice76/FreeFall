<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.damoproductionsandroid.freefall.ShopUpgradesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourBackground"
    >

    <TableLayout
        android:id="@+id/column_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_txt"
        android:layout_marginTop="0sp"
        android:weightSum="100">

        <TableRow>

            <TextView
                android:id="@+id/upgrade_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:layout_weight="50"
                android:fontFamily="@font/pixel_font"
                android:text="UPGRADE"
                android:textColor="#ffff"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/cost_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:fontFamily="@font/pixel_font"
                android:text="COST"
                android:textColor="#fcd904"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/level_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:fontFamily="@font/pixel_font"
                android:text="LEVEL"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_below="@+id/column_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >

